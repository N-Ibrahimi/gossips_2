
<div class="container">
<a class="btn btn-outline-primary" href="/" role="button">Back</a>
<br>
<div class="create form-group bg-primary text-center p-4 m-4 text-white rounded">
<br>

<h2> Create a new potin </h2> 


<%= form_tag url_for(action: 'create'), method: "post" do %>

    <div class="form-group">
      <%= label_tag 'First name' %>
      <%= text_field_tag 'first_name', @first_name, class: "form-control", placeholder: "ex: Je suis superman!" %>
    </div>

    <div class="form-group">
      <%= label_tag 'Last name' %>
      <%= text_field_tag 'last_name', @last_name, class: "form-control", placeholder: "ex: Je suis superman!" %>
    </div> 

    <div class="form-group">
      <%= label_tag 'Titre' %>
      <%= text_field_tag 'title', @title, class: "form-control", placeholder: "ex: Je suis superman!" %>
    </div>

    <div class="form-group">
      <%= label_tag 'Le gossip' %>
      <%= text_area_tag 'content', @content, class: "form-control", placeholder: "ex: Je peux contoller les gens!" %>
    </div>

    <div class="form-group">
      <%= submit_tag "Create", class: "btn btn-lg btn-light mt-4" %>
    </div>
  <% end %>
</div>
