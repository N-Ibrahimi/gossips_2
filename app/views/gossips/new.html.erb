
<div class="container">
<a class="btn btn-outline-primary" href="/" role="button">Back</a>
<br>
<div class="create form-group bg-light text-left p-4 m-4 border-success text-secondary rounded">
<br>

<h2 align="center"> Create a new potin </h2> 

<%= form_tag url_for(action: 'create'), method: "post" do %>

    <div class="form-group">
      <%= label_tag 'Titre' %>
      <%= text_field_tag 'title', @title, class: "form-control", placeholder: "ex: Je suis superman!" %>
    </div>

    <div class="form-group">
      <%= label_tag 'Le gossip' %>
      <%= text_area_tag 'content', @content, class: "form-control", placeholder: "ex: Je peux contoller les gens!" %>
    </div>

    <div class="form-group" align="center">
      <%= submit_tag "Create", class: "btn btn-lg btn-info mt-4" %>
    </div>
  <% end %>
</div>
